class Solution {
    public int candy(int[] ratings) {
        int count =  1;
        int i = 1;
        int n = ratings.length;
        while(i < n ){
             if(ratings[i]==ratings[i-1]){
            count++;
            i++;
            continue;
        }
        int peak  = 1;
        while(i < n && ratings[i] > ratings[i - 1]){
            peak++;
            count+=peak;
            i++;
        }
        int down = 1;
        while(i < n && ratings[i] < ratings[i-1]){
                count+=down;
                i++;
                down++;
        }
        if(down>peak){
                count+=(down-peak);
            }
        }
        return count;
    }
}


